<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="AppThemeAction" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="splashTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="buttonFilledPrimary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_primary_blue_filled</item>
        <item name="android:textColor">@color/white</item>
        <item name="layout_constraintWidth_percent">.9</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:paddingStart">@dimen/space_large</item>
        <item name="android:paddingEnd">@dimen/space_large</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="buttonFilledRed" parent="buttonFilledPrimary">
        <item name="android:background">@drawable/button_primary_red_filled</item>
    </style>

    <style name="buttonOutlinedPrimary" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_primary_blue_outlined</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="layout_constraintWidth_percent">.9</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:paddingStart">@dimen/space_large</item>
        <item name="android:paddingEnd">@dimen/space_large</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="buttonOutlinedAccent" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_light_accent_blue_outlined</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="layout_constraintWidth_percent">.9</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:paddingStart">@dimen/space_large</item>
        <item name="android:paddingEnd">@dimen/space_large</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="buttonFilledSecondary" parent="buttonFilledPrimary">
        <item name="android:background">@drawable/button_primary_grey_filled</item>
    </style>

    <style name="buttonFilledSecondaryBlack" parent="buttonFilledSecondary">
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_height">40dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="myTextInputLabel_DropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">.9</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="boxStrokeColor">@color/text_box_stroke_color</item>
        <item name="hintTextAppearance">@style/myInputHintTextApperance</item>
        <item name="android:theme">@style/themeInputHintColor</item>
    </style>

    <style name="myTextInputLabel_White" parent="myTextInputLabel">
        <item name="boxStrokeColor">@color/text_box_stroke_color_white</item>
        <item name="android:textColorHint">@color/hint_text_color_white</item>
    </style>

    <style name="myTextInputLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">.9</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="hintTextAppearance">@style/myInputHintTextApperance</item>
        <item name="boxStrokeColor">@color/text_box_stroke_color</item>
        <item name="android:theme">@style/themeInputHintColor</item>
    </style>

    <style name="myInputHintTextApperance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="themeInputHintColor">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="themeInputHintColor_White">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="editTextInput" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:paddingStart">@dimen/space_large</item>
        <item name="android:paddingEnd">@dimen/space_medium</item>
    </style>

    <style name="primaryHeadingAccent" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">.9</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/textLargeX</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="primaryBodyText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">.9</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="MyProfileTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="editTextSearchBox" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="layout_constraintWidth_percent">.9</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/shape_rounded_corner_search_box</item>
        <item name="android:drawableStart">@drawable/icon_search</item>
        <item name="android:drawablePadding">@dimen/space_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/space_large</item>
        <item name="android:textColorHint">@color/textColor</item>
    </style>

    <style name="editTextSearchBoxNormal" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:paddingTop">@dimen/space_normal</item>
        <item name="android:paddingBottom">@dimen/space_normal</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">@drawable/shape_rounded_corner_search_box_with_stroke</item>
        <item name="android:drawablePadding">@dimen/space_normal</item>
        <item name="android:paddingStart">@dimen/space_large</item>
        <item name="android:paddingEnd">@dimen/space_large</item>
        <item name="android:textColorHint">@color/lightestGreyHint</item>
    </style>

    <style name="normalBodyText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>
</resources>