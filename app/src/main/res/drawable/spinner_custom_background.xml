<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/backgroundColor"/>
            <stroke
                android:width="1dp"
                android:color="@color/grey_shade_post"/>
            <corners android:radius="@dimen/space_extraSmall"/>
            <padding
                android:bottom="@dimen/lineSpaceExtra2"
                android:left="@dimen/space_normal"
                android:right="@dimen/space_normal"
                android:top="@dimen/lineSpaceExtra2"/>
        </shape>
    </item>
    <item>
        <bitmap
            android:layout_width="@dimen/space_small"
            android:layout_height="@dimen/space_small"
            android:gravity="right"
            android:src="@drawable/icon_down_arrow" />
    </item>
</layer-list>