<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="frag"
            type="com.primapp.ui.chat.ChannelListFragment" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        android:paddingTop="@dimen/space_systemTopInset">

        <include layout="@layout/toolbar_community_back" />

        <EditText
            android:id="@+id/etSearch"
            style="@style/editTextSearchBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_large"
            android:layout_marginEnd="@dimen/space_large"
            android:hint="@string/search"
            android:imeActionLabel="Done"
            android:imeOptions="actionDone"
            android:singleLine="true" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:padding="@dimen/space_large"
            android:layout_height="wrap_content"
            app:SpinKit_Color="@color/colorAccent"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_gravity="center" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:onRefreshListener="@{()->frag.refresh()}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvChannelsList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:itemCount="8"
                tools:listitem="@layout/item_channel_list" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>
</layout>