<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="frag"
            type="com.primapp.ui.contract.CurrentProjectsFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor">

        <include layout="@layout/toolbar_inner_back" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvOngoingProjects"
                    style="@style/normalBodyText"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/space_medium"
                    android:layout_marginEnd="@dimen/space_medium"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/space_normal"
                    android:paddingLeft="@dimen/space_large"
                    app:layout_constraintWidth_percent=".60"
                    android:textSize="@dimen/textLarge"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/ongoing_projects" />

                <TextView
                    android:id="@+id/tvManageProjects"
                    style="@style/normalBodyText"
                    android:layout_marginStart="@dimen/space_medium"
                    android:layout_marginEnd="@dimen/space_medium"
                    android:ellipsize="end"
                    android:paddingEnd="@dimen/space_large"
                    android:textSize="@dimen/textSmall"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/tvOngoingProjects"
                    app:layout_constraintTop_toTopOf="@id/tvOngoingProjects"
                    android:text="@string/manage_projects" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCurrentProjects"
                    android:layout_width="0dp"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="@dimen/space_small"
                    android:layout_height="wrap_content"
                    tools:itemCount="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvOngoingProjects"
                    tools:listitem="@layout/item_current_projects_layout" />

                <TextView
                    android:id="@+id/tvSeeAllCurrentProjects"
                    style="@style/normalBodyText"
                    android:layout_marginStart="@dimen/space_medium"
                    android:layout_marginEnd="@dimen/space_medium"
                    android:ellipsize="end"
                    android:onClick="@{()->frag.openAllProjectsFragment()}"
                    android:paddingEnd="@dimen/space_large"
                    android:textStyle="bold"
                    android:textSize="@dimen/textNormal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/space_large"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rvCurrentProjects"
                    android:text="@string/see_all_projects" />

                <TextView
                    android:id="@+id/tvCompletedProjects"
                    style="@style/normalBodyText"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/space_medium"
                    android:layout_marginEnd="@dimen/space_medium"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/space_normal"
                    android:paddingLeft="@dimen/space_large"
                    app:layout_constraintWidth_percent=".60"
                    android:textSize="@dimen/textLarge"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSeeAllCurrentProjects"
                    android:text="@string/completed_projects" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCompletedProjects"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/space_small"
                    android:layout_height="wrap_content"
                    tools:itemCount="2"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvCompletedProjects"
                    tools:listitem="@layout/item_current_projects_layout" />

                <TextView
                    android:id="@+id/tvSeeAllCompletedProjects"
                    style="@style/normalBodyText"
                    android:layout_marginStart="@dimen/space_medium"
                    android:layout_marginEnd="@dimen/space_medium"
                    android:ellipsize="end"
                    android:paddingEnd="@dimen/space_large"
                    android:textStyle="bold"
                    android:onClick="@{()->frag.openAllProjectsFragment()}"
                    android:textSize="@dimen/textNormal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/space_large"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rvCompletedProjects"
                    android:text="@string/see_all_projects" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>